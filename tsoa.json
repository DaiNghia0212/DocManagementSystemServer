{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./**/*.controller.ts"],
  "spec": {
    "outputDirectory": "./src",
    "specVersion": 3,
    "name": "Document Management System",
    "securityDefinitions": {
      "api_key": {
        "type": "apiKey",
        "name": "Authentication",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "./src",
    "authenticationModule": "./src/authentication/index.ts",
    "iocModule": "src/lib/ioc.container.ts"
  }
}
